@model PetFriends.Models.PadrinhoDoador
@{
    ViewData["Title"] = "Padrinho / Doador";
}
@if (ViewBag.Message != null)
{

    <p class="alert alert-success" role="alert">
        @ViewBag.Message
    </p>
}

<div style="max-width: 1500px; position: relative; left: 30px; font-size:36px;">@ViewData["Title"]</div>

<head>
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.3.0/inputs/date/bootstrap-datepicker/js/locales/bootstrap-datepicker.pt-BR.js"></script>
</head>

<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container justify-content-center g-0" style="max-width: 1500px; position: relative; top: 3%;">
            <div class="row pb-0">
                <div class="form-group col-md-12 pb-0" style="width: 100%; float:right;">
                    <div class="row">
                        <div class="col-sm-9 was-validated">
                            @Html.LabelFor(model => model.NomeCompleto, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.NomeCompleto, new { htmlAttributes = new { @class = "form-control", @data_val="true", @required="required", @oninvalid="this.setCustomValidity('Campo obrigatório')" } })
                            @Html.ValidationMessageFor(model => model.NomeCompleto, "", new { @class = "text-danger" })                
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.RegistroGeral, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.RegistroGeral, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.Cpf, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.TelefoneCelular, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.TelefoneCelular, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Endereco, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-1">
                            @Html.LabelFor(model => model.CasaApto, htmlAttributes: new { @class = "control-label" })  
                            @Html.DropDownListFor(model => model.CasaApto, new SelectList(ViewBag.IdCorPelo, "Id", "CorPeloDesc"), "P/M/G...", htmlAttributes: new { @class = "form-control selectpicker", @data_val="true"} })
                            <label for="casaApto" class="form-label">Casa/Apto</label> 
                            <div class="input-group">
                                <select class="form-select" id="casaApto">
                                    <option value="">Tipo</option>
                                    <option value="1">Casa</option>
                                    <option value="2">Apartamento</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <label for="complemento" class="form-label">Complemento</label>
                            <input type="text" class="form-control" id="complemento">
                        </div>
                        <div class="col-md-1">
                            <label for="cep" class="form-label">CEP</label>
                            <input type="text" class="form-control" id="cep">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <label for="bairro" class="form-label">Bairro</label>
                            <input type="text" class="form-control" id="bairro">
                        </div>
                        <div class="col-md-3">
                            <label for="cidade" class="form-label">Cidade</label>
                            <input type="text" class="form-control" id="cidade">
                        </div>
                        <div class="col-md-1"> 
                            <label for="casaApto" class="form-label">Estado</label>
                            <select class="form-select" id="estado">
                                <option value=""></option>
                                <option value="AC">Acre</option>
                                <option value="AL">Alagoas</option>
                                <option value="AP">Amapá</option>
                                <option value="AM">Amazonas</option>
                                <option value="BA">Bahia</option>
                                <option value="CE">Ceará</option>
                                <option value="DF">Distrito Federal</option>
                                <option value="ES">Espirito Santo</option>
                                <option value="GO">Goiás</option>
                                <option value="MA">Maranhão</option>
                                <option value="MT">Mato Grosso</option>
                                <option value="MS">Mato Grosso do Sul</option>
                                <option value="MG">Minas Gerais</option>
                                <option value="PA">Pará</option>
                                <option value="PB">Paraíba</option>
                                <option value="PR">Paraná</option>
                                <option value="PE">Pernambuco</option>
                                <option value="PI">Piauí</option>
                                <option value="RJ">Rio de Janeiro</option>
                                <option value="RN">Rio Grande do Norte</option>
                                <option value="RS">Rio Grande do Sul</option>
                                <option value="RO">Rondônia</option>
                                <option value="RR">Roraima</option>
                                <option value="SC">Santa Catarina</option>
                                <option value="SP">São Paulo</option>
                                <option value="SE">Sergipe</option>
                                <option value="TO">Tocantins</option>
                            </select>
                        </div>
                        <div class="col-md-1"> 
                            <label for="padrinhoDoador" class="form-label">Padrinho/Doador</label> 
                            <div class="input-group">
                                <select class="form-select" id="tipoUsuario">
                                    <option value=""></option>
                                    <option value="doador">Doador</option>
                                    <option value="padrinho">Padrinho</option>
                                    <option value="madrinha">Madrinha</option>
                                </select>
                            </div> 
                        </div>
                        <div class="col-md-1" style="float:right">
                            <label for="ativo" class="form-label">Ativo?</label>
                            <div>
                                <input type="checkbox" data-toggle="toggle" data-on="Sim" data-off="Não" data-onstyle="success" data-offstyle="danger" id="toggleAtivo">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-9 was-validated">                        
                            <label for="nome" class="form-label">Rede Social</label>
                            <input type="text" class="form-control" id="RedeSocialPadrinhoDoador" required>                    
                        </div>
                    </div>
                    <div class="md-3" style="float:right">
                        <button class="btn btn-primary" type="submit">Salvar</button>
                    </div>
                </div>
            </div>
            
        </div>
    }

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>

    <script src= "~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src= "~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>