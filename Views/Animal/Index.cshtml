@model List<PetFriends.Models.Animal>

@{
    ViewData["Title"] = "Nossos Pets";
}

<div class="container">
    <div class="text-center mb-3" style="font-size: 20px;">
        <h2>@ViewData["Title"]</h2>
    </div>

    <form class="form-control">
        <div class="row">
            @foreach (var animal in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="row g-0">
                            <div class="col-md-5 text-center">
                                <img src="@Url.Content(animal.Foto)" class="img-fluid rounded-start" alt="Animal Image">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h5 class="card-title">Nome: @animal.Nome</h5>
                                    <h6 class="card-text">Idade: @animal.IdadeAnos.@animal.IdadeMeses</h6>
                                    <h6 class="card-text">Eu sou: @animal.Genero</h6>
                                </div>
                            </div>
                            <div class="row pb-3">
                                <div class="col-md-6">
                                    <div class="btn btn-primary" style="background-color: #32CD32; color: white;">
                                        @Html.ActionLink("EDITAR PET", "Edit", new { id = animal.Id }, new { @style = "color: white" })
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square">
                                            <!-- Edit icon path -->
                                        </svg>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="btn btn-danger" style="background-color: #FF4500; color: white;">
                                        @Html.ActionLink("DELETAR PET", "Delete", new { id = animal.Id }, new { @class = "glyphicon glyphicon-trash", @style = "color: white", @onclick = "return confirm('Você tem certeza que deseja deletar esse item?');" })
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill">
                                            <!-- Trash icon path -->
                                        </svg>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </form>

    <div class="col-md-6">
        @Html.ActionLink("Criar PET", "Create", new { @style = "color: white" })
    </div>
</div>
