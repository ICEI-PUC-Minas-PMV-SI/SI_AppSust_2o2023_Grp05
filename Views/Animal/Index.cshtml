
@model  List<PetFriends.Models.Animal>

@{
    ViewData["Title"] = "Nossos Pets";
}

<div class="container justify-content-sm-center g-10" style="padding:5px;">
        <form>
            <div style="font-size:20px;">@ViewData["Title"]</div>
        </form>
         
        <form class="form-control">
            <div class="row pb-1">            
                @foreach (var a in Model)
                
                {
                    <div class="col-md-6 pb-1" style="max-width: 280px;">
                       <div class="card mb-3 mt-0 pb-1 g-1" style="max-height: 200px;max-width:280px; padding:5px">
                            <div class="row g-0">
                                <div class="col-md-5" style="text-align: center; align-items: center;  justify-content: center;">
                                    <img width="100" height="100" src="@Url.Content(@a.Foto)" class="img-fluid rounded-start align-content-center">
                                </div>
                                <div class="col-md-7">
                                    <div class="card-body">
                                    <h5 style="font-size:12px;" class="card-title">Nome: @a.Nome</h5>
                                    <h6 style="font-size:12px;" class="card-text">Idade: @a.IdadeAnos.@a.IdadeMeses</h6>
                                    <h6 style="font-size:12px;" class="card-text">Eu sou: @a.Genero</h6>
                                    </div>
                                </div>
                                <div class="row pb-5 g-1 rounded rounded-2" style="padding:5px; vertical-align: baseline">
                                    <div class="text-light fw-bold  rounded rounded-2" style="background-color: #277EAF; text-align:center;">
                                        @Html.ActionLink("EDITAR PET", "Edit", new { id = a.Id}, new { id = @"id",style = "color: white" })
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                        </svg>
                                    </div>
                                    <div class="text-light fw-bold  rounded rounded-2" style="background-color: #277EAF; text-align:center;">
                                        @Html.ActionLink("EDITAR PET", "Edit", new { id = a.Id}, new { id = @"id",style = "color: white" })
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                        </svg>
                                    </div>   
                                </div>  
                            </div> 
                                
                        </div>
                        
                    </div>
                }                
            </div>
        </form>

        <div class="col-md-6">
            
            @Html.ActionLink("Criar PET", "Create", new {style = "color: white" })
            
        </div>
</div>

    
    
