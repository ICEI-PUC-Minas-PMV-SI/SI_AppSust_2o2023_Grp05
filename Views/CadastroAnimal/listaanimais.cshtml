@{
    ViewData["Title"] = "Teste - Lista de animais";
}
<div style="max-width: 1670px; font-size:36px;">@ViewData["Title"]</div>
<p></p>
<p></p>
<p></p>
<div class="container justify-content-sm-center g-0" style="max-width: 1670px;">
    <div class="container justify-content-sm-center g-0" style="max-width: 1670px;">
        <div class="row pb-0">
            @foreach (var a in (List<PetFriends.Models.CadastroAnimal>)ViewBag.users)
            {
                <div class="col-md-7 pb-0" style="max-width: 550px;">
                   <div class="card mb-3 mt-0 pb-0 g-0">
                        <div class="row g-0 justify-content-sm-center">
                            <div class="col-md-5">
                                <img src="@Url.Content(@a.foto)" class="img-fluid rounded-start width=387px height=200px">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                <h5 class="card-title">@a.nome</h5>
                                <p class="card-text">@a.genero</p>
                                <p class="card-text">@a.idade_anos</p>
                                <p class="card-text">@a.idade_meses</p>
                                <p class="card-text"><small class="text-body-secondary">@a.historia</small></p>
                                </div>
                            </div>   
                            <div class="row pb-0 justify-content-sm-center g-1">
                                <a class="nav-link text-light fw-bold" style="background-color: #277EAF; text-align:center;" asp-area="" asp-controller="CadastroAnimal" asp-action="AdicionarEditarAnimal">EDITAR PERFIL
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                    </svg>
                                </a>                              
                                    
                            </div>
                        </div>                
                    </div>
                </div>
            }
        </div>
    </div>
</div>
    
    
