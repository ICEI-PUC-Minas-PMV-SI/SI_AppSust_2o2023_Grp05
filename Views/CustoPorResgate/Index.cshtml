@model List<PetFriends.Models.CustoPorResgate>

@{
    ViewData["Title"] = "Lista de todos os custos por resgate";
}

<div class="container justify-content-sm-center g-10" style="padding:5px;">
    <form>
        <h2>@ViewData["Title"]</h2>
    </form>
    <div class="row">
        <div class="col-md-6 flex-grow-1 " style="float: right; display:flex; justify-content: flex-end; margin-bottom:10px;">
            <button type="button" class="btn btn-primary btn-sm" style="color:white">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                  <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0"></path>
                </svg> 
                @Html.ActionLink("Novo Custo", "Create", "CustoPorResgate", null, new { @class = "btn btn-primary btn-sm" })
            </button>
        </div>
    </div>
    <form class="form-control">
        <div class="row pb-1">
            <table style="justify-content:center; border:1px solid #aaaaaa; border-collapse: collapse; width: 100%; margin-top: 20px;">
                <thead>
                    <tr>
                        <th style="border: 1px solid #dddddd; text-align: left; padding: 8px; background-color: #f2f2f2;">#</th>
                        <th style="border: 1px solid #dddddd; text-align: left; padding: 8px; background-color: #f2f2f2;">Ação</th>
                        <th style="border: 1px solid #dddddd; text-align: left; padding: 8px; background-color: #f2f2f2;">Custo Macho</th>
                        <th style="border: 1px solid #dddddd; text-align: left; padding: 8px; background-color: #f2f2f2;">Custo Fêmea</th>
                        <th style="border: 1px solid #dddddd; text-align: left; padding: 8px; background-color: #f2f2f2;">Data do Cadastro</th>
                        <th style="border: 1px solid #dddddd; text-align: left; padding: 8px; background-color: #f2f2f2;">Ativo?</th>
                        <th style="border: 1px solid #dddddd; text-align: left; padding: 8px; background-color: #f2f2f2;">Editar</th>
                        <th style="border: 1px solid #dddddd; text-align: left; padding: 8px; background-color: #f2f2f2;">Excluir</th>
                    </tr>
                </thead>
                @*<p><b>Lista de todos os custos por resgate</b></p>*@
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">@c.Id</td>
                            <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">@c.Acao</td>
                            <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">@string.Format("R$ {0:N2}", c.CustoMacho)</td>
                            <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">@string.Format("R$ {0:N2}", c.CustoFemea)</td>
                            <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">@c.DataCadastro</td>
                            <td style="border: 1px solid #dddddd; text-align: left; padding: 8px;">@(c.Ativo ? "Sim" : "Não")</td>
                            <td style="border: 1px solid #dddddd; text-align: center; padding: 8px; width: 25px">                                
                                <a id="editarUsuario" href='@Url.Action("Edit", "CustoPorResgate", new { id = c.Id })' style="color:lightgreen">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"></path>
                                    </svg> 
                                </a>
                            </td>

                            <td style="border: 1px solid #dddddd; text-align: center; padding: 8px; width: 25px">
                                <a id="deletarUsuario" href='@Url.Action("Delete", "CustoPorResgate", new { id = c.Id })' style="color:lightgreen">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                      <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5"></path>
                                    </svg>
                                </a>
                            </td>    
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>
