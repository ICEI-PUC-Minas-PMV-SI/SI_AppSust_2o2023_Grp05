
@model  List<PetFriends.Models.DespesaFixa>

@{
    ViewData["Title"] = "Despesas Fixas";
}

<div class="container justify-content-sm-center g-10" style="padding:5px;">
    <form>
        <div style="font-size:20px;">@ViewData["Title"]</div>
    </form>         
    <form class="form-control">
        <div class="row pb-1">            
            <table style="; justify-content:center;border:1px solid #aaaaaa;border-collapse: collapse; width: 100%;margin-top: 20px;">
                <thead>
                    <tr>
                        <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;background-color: #f2f2f2;">#</th>
                        <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;background-color: #f2f2f2;">Porte</th>
                        <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;background-color: #f2f2f2;">Tipo</th>
                        <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;background-color: #f2f2f2;">Onde</th>
                        <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;background-color: #f2f2f2;">Valor</th>
                        <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;background-color: #f2f2f2;">Editar</th>
                        <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;background-color: #f2f2f2;">Excluir</th>

                    </tr>
                </thead>
                <p><b>Lista de todas as despesas</b></p>
                <tbody>
                    @{foreach (var d in Model)
                        {
                            <tr>
                                <td style="border: 1px solid #dddddd;text-align: left;padding: 8px;">@d.Id</td>
                                <td style="border: 1px solid #dddddd;text-align: left;padding: 8px;">@d.IdPorte</td>
                                <td style="border: 1px solid #dddddd;text-align: left;padding: 8px;">@d.TipoDespesa</td>
                                <td style="border: 1px solid #dddddd;text-align: left;padding: 8px;">@d.Onde</td>
                                <td style="border: 1px solid #dddddd;text-align: left;padding: 8px;">@string.Format("R$ {0:N2}", d.ValorDespesa)</td>
                                <td style="border: 1px solid #dddddd;text-align: left;padding: 8px; width: 25px">@Html.ActionLink("EDITAR", "Edit", new { id = d.Id}, new { id = @"id",style = "color: blue" })
    
                                </td>
                                <td style="border: 1px solid #dddddd;text-align: left;padding: 8px; width: 25px">
                                        
                                    @Html.ActionLink("DELETAR", "Delete", new { id = d.Id}, new {@class = "glyphicon glyphicon-trash", id = @"id",style = "color: red",onclick = "return confirm('Are you sure you wish to delete this article?');" })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>                     
        </div>
    </form>
    <div class="col-md-6">            
        @Html.ActionLink("Criar Despesa", "Create", new {style = "color: white" })            
    </div>
</div>

