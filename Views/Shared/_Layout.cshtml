<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetFriends</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PetFriends.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
         <nav class="navbar navbar-dark navbar-expand-sm navbar-toggleable-sm bg-custom border-bottom box-shadow mb-3" style="background-color: #FF7A26; height:67px; font-size:16px">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <a class="nav-link text-light fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        <img id="logo" src="~/Images/logo.png" width="50" height="50"/>
                    </a>                        
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <a class="nav-link text-light fw-bold" asp-area="" asp-controller="HomeAfterLogin" asp-action="Index">
                        <img id="logo" src="~/Images/logo.png" width="50" height="50"/>
                    </a>
                    <div class="collapse navbar-collapse" id="navbarNavLightDropdown">
                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                            <li class="nav-item dropdown g-1" style="margin-left:10px;font-weight: bold;">
                                <button class="btn btn-sm dropdown-toggle" style="background-color: #ffdbc4; opacity:100%; font-weight: bold;" data-bs-toggle="dropdown" aria-expanded="false">Animais</button>
                                <ul class="dropdown-menu" style="background-color: #FF7A26;">
                                    <a class="dropdown-item" style="color:#ffdbc4; font-weight: bold;" onMouseOver="this.style.color='#FF7A26'"  onMouseOut="this.style.color='#ffdbc4'" asp-area="" asp-controller="Animal" asp-action="Index">Cadastrar animal</a>
                                    <a class="dropdown-item" style="color:#ffdbc4; font-weight: bold;" onMouseOver="this.style.color='#FF7A26'"  onMouseOut="this.style.color='#ffdbc4'" asp-area="" asp-controller="TipoAnimal" asp-action="Index">Tipos de Animais</a>
                                    <a class="dropdown-item" style="color:#ffdbc4; font-weight: bold;" onMouseOver="this.style.color='#FF7A26'"  onMouseOut="this.style.color='#ffdbc4'" asp-area="" asp-controller="CorPelo" asp-action="Index">Cor de Pelo</a>  
                                    <a class="dropdown-item" style="color:#ffdbc4; font-weight: bold;" onMouseOver="this.style.color='#FF7A26'"  onMouseOut="this.style.color='#ffdbc4'" asp-area="" asp-controller="Adocao" asp-action="Index">Controle de Adoção</a> 
                                    <a class="dropdown-item" style="color:#ffdbc4; font-weight: bold;" onMouseOver="this.style.color='#FF7A26'"  onMouseOut="this.style.color='#ffdbc4'" asp-area="" asp-controller="Doacao" asp-action="Index">Controle de Doações</a> 
                                </ul>
                            </li>
                            <spam></spam>
                            <li class="nav-item dropdown g-1" style="margin-left:10px">
                                <button class="btn btn-sm dropdown-toggle" style="background-color: #ffdbc4; opacity:100%;font-weight: bold;" data-bs-toggle="dropdown" aria-expanded="false">Financeiro</button>
                                <ul class="dropdown-menu" style="background-color: #FF7A26;">
                                    <a class="dropdown-item" style="color:#ffdbc4;font-weight: bold;" onMouseOver="this.style.color='#FF7A26'"  onMouseOut="this.style.color='#ffdbc4'" asp-area="" asp-controller="DespesaFixa" asp-action="Index">Despesas</a>
                                    <a class="dropdown-item" style="color:#ffdbc4;font-weight: bold;" onMouseOver="this.style.color='#FF7A26'"  onMouseOut="this.style.color='#ffdbc4'" asp-area="" asp-controller="CustoPorResgate" asp-action="Index">Custo por Resgate</a>
                                </ul>
                            </li>
                            <spam></spam>
                            <li class="nav-item dropdown g-1" style="margin-left:10px">
                                <button class="btn btn-sm dropdown-toggle" style="background-color: #ffdbc4; opacity:100%;font-weight: bold;" data-bs-toggle="dropdown" aria-expanded="false">Colaboradores</button>
                                <ul class="dropdown-menu" style="background-color: #FF7A26;">
                                    <a class="dropdown-item" style="color:#ffdbc4;font-weight: bold;" onMouseOver="this.style.color='#FF7A26'"  onMouseOut="this.style.color='#ffdbc4'" asp-area="" asp-controller="Usuario" asp-action="Index">Usuários</a>
                                    <a class="dropdown-item" style="color:#ffdbc4;font-weight: bold;" onMouseOver="this.style.color='#FF7A26'"  onMouseOut="this.style.color='#ffdbc4'" asp-area="" asp-controller="LarTemporario" asp-action="Index">Lar Temporario</a>                  
                                </ul>
                            </li>
                            <spam></spam>

                            <li class="nav-item dropdown g-1" style="margin-left:10px">
                                <button class="btn btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">                                    
                                    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" color="white" class="bi bi-person-circle" viewBox="0 0 16 16">
                                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                                    </svg>
                                </button>
                                <ul class="dropdown-menu" style="background-color: #FF7A26;">
                                    <a class="dropdown-item" style="color:#ffdbc4;font-weight: bold;" onMouseOver="this.style.color='#FF7A26'"  onMouseOut="this.style.color='#ffffff'" asp-area="" asp-controller="Home" asp-action="Index">Sair</a>   
                                </ul>
                            </li>
                        </ul>   
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container justify-content-sm-center g-0">
        <main role="main" class="container justify-content-sm-center g-0">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted" style="max-height:30px">
        <div class="container">
            &copy; 2023 - PetFriends - Projeto de Sustentabilidade, em parceria com alunos da PUC Minas @*<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
