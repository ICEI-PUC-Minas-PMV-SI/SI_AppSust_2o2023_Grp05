<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetFriends</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PetFriends.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark navbar-expand-sm navbar-toggleable-sm bg-custom border-bottom box-shadow mb-3" style="background-color: #FF7A26; height:67px; font-size:18px">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span><img id="logo" src="~/Images/logo.png" width="50" height="50" /></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <img id="logo" src="~/Images/logo.png" width="50" height="50" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item g-0" style="font-size:18px">
                            <a class="nav-link text-light fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item g-0" style="font-size:18px">
                            <a class="nav-link text-light fw-bold" href="https://apoia.se/petfriends_animal" target="_blank">Desejo Apoiar</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <!-- Utilizando justify-content-end para alinhar à direita -->
                        <li class="nav-item g-0" style="font-size:18px;">
                            <a class="nav-link text-light fw-bold" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container justify-content-sm-center g-0">
        <main role="main" class="container justify-content-sm-center g-0">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted" style="max-height:30px">
        <div class="container">
            &copy; 2023 - PetFriends - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
